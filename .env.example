# =============================================================================
# GhostSpeak Protocol - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Development uses Solana Devnet for testing
# =============================================================================

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
GHOSTSPEAK_NETWORK=devnet
GHOSTSPEAK_RPC_URL=https://api.devnet.solana.com

# -----------------------------------------------------------------------------
# Program IDs (different for each network)
# -----------------------------------------------------------------------------
GHOSTSPEAK_PROGRAM_ID_MAINNET=
GHOSTSPEAK_PROGRAM_ID_DEVNET=GpvFxus2eecFKcqa2bhxXeRjpstPeCEJNX216TQCcNC9
GHOSTSPEAK_PROGRAM_ID_TESTNET=

# -----------------------------------------------------------------------------
# Wallet Configuration
# -----------------------------------------------------------------------------
# Generate with: solana-keygen new -o ~/.config/solana/ghostspeak.json
GHOSTSPEAK_WALLET_PATH=~/.config/solana/ghostspeak.json
GHOSTSPEAK_KEYPAIR_PATH=

# -----------------------------------------------------------------------------
# Token Configuration
# -----------------------------------------------------------------------------
# Official Circle USDC addresses
GHOSTSPEAK_USDC_MINT_DEVNET=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU
GHOSTSPEAK_USDC_MINT_MAINNET=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# $GHOST Governance Token (pump.fun)
GHOSTSPEAK_GHOST_TOKEN_MINT=DFQ9ejBt1T192Xnru1J21bFq9FSU7gjRRRYJkehvpump
GHOSTSPEAK_GHOST_TOKEN_DECIMALS=6

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
GHOSTSPEAK_API_KEY=
GHOSTSPEAK_API_SECRET=

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
GHOSTSPEAK_ENCRYPTION_SALT=
GHOSTSPEAK_KEY_DERIVATION_ITERATIONS=100000

# -----------------------------------------------------------------------------
# Admin Keys Configuration
# -----------------------------------------------------------------------------
# Devnet/Testnet: Use your test wallet
DEVNET_ADMIN_KEY=
DEVNET_UPGRADE_AUTHORITY=
DEVNET_FEE_RECEIVER=

TESTNET_ADMIN_KEY=
TESTNET_UPGRADE_AUTHORITY=
TESTNET_FEE_RECEIVER=

# Mainnet: Use your multisig wallet (CRITICAL for production)
# MAINNET_ADMIN_KEY=
# MAINNET_UPGRADE_AUTHORITY=
# MAINNET_FEE_RECEIVER=
# MAINNET_EMERGENCY_AUTHORITY=
# MAINNET_AUTHORIZED_VERIFIERS=

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
GHOSTSPEAK_MONITORING_ENABLED=false
GHOSTSPEAK_MONITORING_ENDPOINT=

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
GHOSTSPEAK_DEBUG=false
GHOSTSPEAK_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Pinata IPFS (Optional - for credential metadata storage)
# -----------------------------------------------------------------------------
# Sign up: https://www.pinata.cloud
# Falls back to base64 data URIs if not configured
# Recommended for production (better performance, decentralized)
PINATA_API_KEY=
PINATA_SECRET_KEY=
PINATA_JWT=
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud/ipfs
