# GhostSpeak Environment Configuration
# Copy this file to .env and fill in your values

# Network Configuration
GHOSTSPEAK_NETWORK=devnet
GHOSTSPEAK_RPC_URL=https://api.devnet.solana.com

# Program IDs (different for each network)
GHOSTSPEAK_PROGRAM_ID_MAINNET=
GHOSTSPEAK_PROGRAM_ID_DEVNET=CBpmFUfm5GBgdtx2G2exCQqMANhwa64S56kD8Wa3Ugv4
GHOSTSPEAK_PROGRAM_ID_TESTNET=

# Wallet Configuration
GHOSTSPEAK_WALLET_PATH=~/.config/solana/ghostspeak.json
GHOSTSPEAK_KEYPAIR_PATH=

# Token Configuration
GHOSTSPEAK_USDC_MINT_DEVNET=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU
GHOSTSPEAK_USDC_MINT_MAINNET=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# API Configuration
GHOSTSPEAK_API_KEY=
GHOSTSPEAK_API_SECRET=

# Security Configuration
GHOSTSPEAK_ENCRYPTION_SALT=
GHOSTSPEAK_KEY_DERIVATION_ITERATIONS=100000

# Admin Keys Configuration (CRITICAL - Never use system program addresses)
DEVNET_ADMIN_KEY=DevAdminPubkey111111111111111111111111111111
DEVNET_UPGRADE_AUTHORITY=DevUpgradeAuth111111111111111111111111111111
DEVNET_FEE_RECEIVER=DevFeeReceiver111111111111111111111111111111

TESTNET_ADMIN_KEY=TestAdminPubkey11111111111111111111111111111
TESTNET_UPGRADE_AUTHORITY=TestUpgradeAuth11111111111111111111111111111
TESTNET_FEE_RECEIVER=TestFeeReceiver11111111111111111111111111111

# Mainnet keys - MUST be set for production (use multisig)
# MAINNET_ADMIN_KEY=<your-multisig-wallet-address>
# MAINNET_UPGRADE_AUTHORITY=<set-to-null-for-immutable-program>
# MAINNET_FEE_RECEIVER=<your-fee-receiver-address>
# MAINNET_EMERGENCY_AUTHORITY=<your-emergency-pause-authority>
# MAINNET_AUTHORIZED_VERIFIERS=<comma-separated-list-of-verifier-addresses>

# Monitoring Configuration
GHOSTSPEAK_MONITORING_ENABLED=false
GHOSTSPEAK_MONITORING_ENDPOINT=

# Development Configuration
GHOSTSPEAK_DEBUG=false
GHOSTSPEAK_LOG_LEVEL=info

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here
SENTRY_ORG=ghostspeak
SENTRY_PROJECT=ghostspeak-web
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Application
NEXT_PUBLIC_APP_VERSION=1.5.0

# Turso Database Configuration (Optional - enables caching and analytics)
# Sign up at https://turso.tech to get your credentials
# Benefits: 80%+ reduction in RPC calls, <100ms query times, real-time analytics
# Free tier: 5GB storage, 500M reads/month, 10M writes/month
# If not configured, SDK will gracefully fall back to on-chain only mode
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Crossmint Configuration (Fiat-to-Crypto Checkout)
# Sign up at https://www.crossmint.com/console to get your credentials
# Used for: Ghost Score verification payments with credit/debit cards
# User pays $1.03 (includes 3% fee), protocol receives 1 USDC
NEXT_PUBLIC_CROSSMINT_API_KEY=your_crossmint_client_api_key_here
NEXT_PUBLIC_CROSSMINT_COLLECTION_ID=your_crossmint_collection_id_here
CROSSMINT_WEBHOOK_SECRET=your_crossmint_webhook_signing_secret_here