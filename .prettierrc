{
  "$schema": "https://json.schemastore.org/prettierrc",
  "//": "=== BASIC FORMATTING ===",
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  
  "//": "=== AI DEVELOPMENT OPTIMIZATIONS ===",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "auto",
  "insertPragma": false,
  "requirePragma": false,
  
  "//": "=== FILE TYPE OVERRIDES ===",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 100,
        "proseWrap": "always",
        "tabWidth": 2
      }
    },
    {
      "files": "*.json",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.yaml",
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": "*.yml",
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": "package.json",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.toml",
      "options": {
        "printWidth": 100,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "avoid"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.test.{js,ts,tsx}",
      "options": {
        "printWidth": 100,
        "trailingComma": "all"
      }
    },
    {
      "files": "*.config.{js,ts}",
      "options": {
        "printWidth": 100,
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.d.ts",
      "options": {
        "printWidth": 120,
        "semi": true
      }
    }
  ]
} 