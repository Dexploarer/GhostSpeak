{
  "dashboard": {
    "id": null,
    "uid": "ghostspeak-mainnet",
    "title": "GhostSpeak Mainnet Dashboard",
    "tags": ["ghostspeak", "solana", "mainnet"],
    "timezone": "UTC",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "annotations": {
      "list": [
        {
          "datasource": "-- Grafana --",
          "enable": true,
          "name": "Deployments",
          "type": "tags",
          "tags": ["deployment"]
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Transaction Volume (24h)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(ghostspeak_transactions_total[24h])) by (instruction_type)",
            "legendFormat": "{{instruction_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Transaction Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(ghostspeak_transactions_successful) / sum(ghostspeak_transactions_total)) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "RPC Latency (p95)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ghostspeak_rpc_latency_seconds_bucket[5m]))",
            "legendFormat": "P95 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(ghostspeak_errors_total[5m])) by (error_type)",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 5,
        "title": "Transactions by Instruction Type",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (instruction_type) (increase(ghostspeak_transactions_total[24h]))",
            "legendFormat": "{{instruction_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Agent Registrations (Daily)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(increase(ghostspeak_agents_registered_total[24h]))",
            "legendFormat": "Agents Registered"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 7,
        "title": "Active Agents",
        "type": "stat",
        "targets": [
          {
            "expr": "ghostspeak_agents_active",
            "legendFormat": "Active Agents"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Ghost Score Updates (Hourly)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(ghostspeak_reputation_updates_total[1h]))",
            "legendFormat": "Reputation Updates"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 9,
        "title": "Escrow Creation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(ghostspeak_escrows_created_total[1h]))",
            "legendFormat": "Escrows Created"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
      },
      {
        "id": 10,
        "title": "Escrow Completion Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(ghostspeak_escrows_completed_total) / sum(ghostspeak_escrows_created_total)) * 100",
            "legendFormat": "Completion Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16}
      },
      {
        "id": 11,
        "title": "Protocol Fee Revenue (SOL)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(increase(ghostspeak_protocol_fees_collected_lamports[24h])) / 1e9",
            "legendFormat": "Total Fees (SOL)"
          },
          {
            "expr": "sum by (fee_type) (increase(ghostspeak_protocol_fees_collected_lamports[24h])) / 1e9",
            "legendFormat": "{{fee_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28}
      },
      {
        "id": 12,
        "title": "Fee Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (destination) (increase(ghostspeak_fees_distributed_lamports[24h]))",
            "legendFormat": "{{destination}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28}
      },
      {
        "id": 13,
        "title": "Staking Volume (SOL)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(ghostspeak_total_staked_lamports) / 1e9",
            "legendFormat": "Total Staked"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16}
      },
      {
        "id": 14,
        "title": "Governance Proposals",
        "type": "table",
        "targets": [
          {
            "expr": "ghostspeak_proposals_total",
            "legendFormat": "Total Proposals"
          },
          {
            "expr": "ghostspeak_proposals_active",
            "legendFormat": "Active Proposals"
          },
          {
            "expr": "ghostspeak_proposals_passed",
            "legendFormat": "Passed Proposals"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36}
      },
      {
        "id": 15,
        "title": "Votes Cast (Daily)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(increase(ghostspeak_votes_cast_total[24h]))",
            "legendFormat": "Votes Cast"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36}
      },
      {
        "id": 16,
        "title": "Database Connection Pool",
        "type": "graph",
        "targets": [
          {
            "expr": "ghostspeak_db_connections_active",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "ghostspeak_db_connections_idle",
            "legendFormat": "Idle Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 44}
      },
      {
        "id": 17,
        "title": "Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(ghostspeak_cache_hits) / sum(ghostspeak_cache_requests)) * 100",
            "legendFormat": "Cache Hit Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 44}
      },
      {
        "id": 18,
        "title": "API Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ghostspeak_api_response_time_seconds_bucket[5m]))",
            "legendFormat": "P95 Response Time"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 48}
      },
      {
        "id": 19,
        "title": "Active Users (Daily)",
        "type": "stat",
        "targets": [
          {
            "expr": "count(count_over_time(ghostspeak_user_activity[24h]))",
            "legendFormat": "Daily Active Users"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 44}
      },
      {
        "id": 20,
        "title": "Credential Issuances (Daily)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(increase(ghostspeak_credentials_issued_total[24h]))",
            "legendFormat": "Credentials Issued"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 52}
      },
      {
        "id": 21,
        "title": "System Health",
        "type": "table",
        "targets": [
          {
            "expr": "up{job=\"ghostspeak-api\"}",
            "legendFormat": "API Status"
          },
          {
            "expr": "up{job=\"ghostspeak-db\"}",
            "legendFormat": "Database Status"
          },
          {
            "expr": "up{job=\"ghostspeak-cache\"}",
            "legendFormat": "Cache Status"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 52}
      }
    ]
  }
}
