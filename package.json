{
  "name": "ghostspeak",
  "version": "0.1.1",
  "description": "Pure protocol for AI agent commerce on Solana blockchain - 2025 Production Implementation",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=24.0.0 <25.0.0"
  },
  "scripts": {
    "dev": "turbo dev:next dev:convex --filter=web",
    "dev:web": "cd apps/web && bun run dev",
    "dev:sdk": "cd packages/sdk-typescript && bun run dev",
    "build": "turbo build && cd apps/web && bun run deploy:convex:prod",
    "build:web": "cd apps/web && bun run build",
    "build:miniapp": "cd apps/miniapp && bun run build",
    "build:packages": "turbo build --filter=!web",
    "build:sdk": "cd packages/sdk-typescript && bun run build",
    "build:plugin": "cd packages/plugin-ghostspeak && bun run build",
    "build:anchor": "anchor build",
    "build:anchor:release": "anchor build --release",
    "clean": "turbo clean",
    "clean:all": "turbo clean && rm -rf node_modules packages/*/node_modules",
    "test": "turbo test",
    "test:web": "cd apps/web && bun run test",
    "test:sdk": "cd packages/sdk-typescript && bun run test",
    "test:unit": "vitest run packages/**/tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "cd apps/web && bun run test:e2e",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "type-check": "turbo type-check",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "convex:dev": "cd apps/web && bun run dev:convex",
    "convex:deploy": "cd apps/web && bun run deploy:convex:prod",
    "convex:logs": "cd apps/web && bun run convex:logs:prod",
    "deploy:anchor": "anchor deploy",
    "deploy:anchor:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:anchor:mainnet": "anchor deploy --provider.cluster mainnet",
    "idl": "anchor idl build",
    "idl:init": "anchor idl init GpvFxus2eecFKcqa2bhxXeRjpstPeCEJNX216TQCcNC9 --filepath target/idl/ghostspeak_marketplace.json",
    "idl:upgrade": "anchor idl upgrade GpvFxus2eecFKcqa2bhxXeRjpstPeCEJNX216TQCcNC9 --filepath target/idl/ghostspeak_marketplace.json",
    "idl:fetch": "anchor idl fetch GpvFxus2eecFKcqa2bhxXeRjpstPeCEJNX216TQCcNC9",
    "setup:devnet": "solana config set --url https://api.devnet.solana.com && solana airdrop 2",
    "setup:testnet": "solana config set --url https://api.testnet.solana.com && solana airdrop 10",
    "setup:mainnet": "solana config set --url https://api.mainnet-beta.solana.com",
    "verify:deployment": "bun scripts/verify-deployment.ts",
    "verify:health": "bun scripts/health-check.ts",
    "ci:install": "bun install",
    "ci:build": "bun run build",
    "ci:test": "bun run test",
    "ci:deploy": "bun run build && bun run deploy:anchor:devnet",
    "fund-wallet": "bun scripts/fund-wallet.ts",
    "setup-wallet": "bun scripts/fund-wallet.ts"
  },
  "keywords": [
    "solana",
    "blockchain",
    "ai-agents",
    "defi",
    "smart-contracts",
    "anchor",
    "rust"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ghostspeak/GhostSpeak"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "bun@1.3.4"
}