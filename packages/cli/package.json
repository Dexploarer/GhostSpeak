{
  "name": "@ghostspeak/cli",
  "version": "1.0.0",
  "description": "Unified CLI for ghostspeak Agent Commerce Protocol - supports both TypeScript and Rust SDKs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ghostspeak": "dist/index.js",
    "ghostspeak-cli": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "install:typescript": "npm install @ghostspeak/sdk",
    "install:rust": "echo 'Add podai-sdk to your Cargo.toml dependencies'",
    "create:typescript": "ghostspeak develop create-project --sdk typescript",
    "create:rust": "ghostspeak develop create-project --sdk rust",
    "create:both": "ghostspeak develop create-project --sdk both"
  },
  "dependencies": {
    "@inquirer/prompts": "^6.0.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.1.0",
    "ora": "^8.1.1",
    "boxen": "^8.0.1",
    "figlet": "^1.8.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.7",
    "@types/figlet": "^1.7.0",
    "typescript": "^5.8.3",
    "tsx": "^4.19.2",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "peerDependencies": {
    "@ghostspeak/sdk": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@ghostspeak/sdk": {
      "optional": true
    }
  },
  "keywords": [
    "ghostspeak",
    "agent",
    "commerce",
    "protocol",
    "solana",
    "ai",
    "blockchain",
    "cli",
    "typescript",
    "rust",
    "sdk",
    "unified",
    "multi-language"
  ],
  "author": "ghostspeak Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghostspeak/ghostspeak.git",
    "directory": "packages/cli"
  },
  "homepage": "https://docs.ghostspeak.com/cli",
  "bugs": "https://github.com/ghostspeak/ghostspeak/issues",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
} 