{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "../../",
    "baseUrl": "../../",
    "paths": {
      "@podai/sdk": ["./packages/sdk-typescript/src"],
      "@podai/sdk/*": ["./packages/sdk-typescript/src/*"],
      "@/*": ["./packages/cli/src/*"],
      "@ui/*": ["./packages/cli/src/ui/*"],
      "@commands/*": ["./packages/cli/src/commands/*"],
      "@utils/*": ["./packages/cli/src/utils/*"]
    },
    "types": ["node", "bun"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*",
    "../sdk-typescript/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
} 