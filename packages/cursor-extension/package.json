{
  "name": "wija-studio",
  "displayName": "Wija Studio",
  "description": "Complete development environment for Wija Agent Commerce Protocol - Build, deploy, and manage AI agents on Solana",
  "version": "1.0.0",
  "publisher": "wija",
  "icon": "assets/wija-icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other",
    "Snippets",
    "Themes"
  ],
  "keywords": [
    "solana",
    "web3",
    "anchor",
    "agents",
    "blockchain",
    "ai",
    "wija",
    "ouija",
    "typescript",
    "rust"
  ],
  "activationEvents": [
    "workspaceContains:**/Anchor.toml",
    "workspaceContains:**/Cargo.toml",
    "workspaceContains:**/.wija",
    "workspaceContains:**/.ghostspeak",
    "workspaceContains:**/package.json",
    "onCommand:wija.initialize",
    "onCommand:wija.openDashboard",
    "onLanguage:rust",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wija-config",
        "aliases": ["Wija Config", "wija"],
        "extensions": [".wija"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wija-config",
        "scopeName": "source.wija",
        "path": "./syntaxes/wija.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "wija.initialize",
        "title": "Initialize Wija Project",
        "category": "Wija",
        "icon": "$(symbol-class)"
      },
      {
        "command": "wija.openDashboard",
        "title": "Open Wija Dashboard",
        "category": "Wija",
        "icon": "$(dashboard)"
      },
      {
        "command": "wija.deployAgent",
        "title": "Deploy Agent",
        "category": "Wija",
        "icon": "$(rocket)"
      },
      {
        "command": "wija.createChannel",
        "title": "Create Channel",
        "category": "Wija",
        "icon": "$(broadcast)"
      },
      {
        "command": "wija.openMarketplace",
        "title": "Open Agent Marketplace",
        "category": "Wija",
        "icon": "$(extensions)"
      },
      {
        "command": "wija.connectWallet",
        "title": "Connect Wallet",
        "category": "Wija",
        "icon": "$(key)"
      },
      {
        "command": "wija.viewTransactions",
        "title": "View Transactions",
        "category": "Wija",
        "icon": "$(list-unordered)"
      },
      {
        "command": "wija.generateSDKCode",
        "title": "Generate SDK Code",
        "category": "Wija",
        "icon": "$(code)"
      },
      {
        "command": "wija.runTests",
        "title": "Run Wija Tests",
        "category": "Wija",
        "icon": "$(beaker)"
      },
      {
        "command": "wija.switchNetwork",
        "title": "Switch Network",
        "category": "Wija",
        "icon": "$(globe)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "wija.initialize",
          "when": "!wija.projectDetected"
        },
        {
          "command": "wija.openDashboard",
          "when": "wija.projectDetected"
        },
        {
          "command": "wija.deployAgent",
          "when": "wija.projectDetected && wija.walletConnected"
        }
      ],
      "explorer/context": [
        {
          "command": "wija.initialize",
          "when": "explorerResourceIsFolder && !wija.projectDetected",
          "group": "wija@1"
        },
        {
          "command": "wija.generateSDKCode",
          "when": "wija.projectDetected && resourceExtname == .json",
          "group": "wija@2"
        }
      ],
      "editor/context": [
        {
          "command": "wija.generateSDKCode",
          "when": "wija.anchorIDL && resourceExtname == .json",
          "group": "wija@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wija-studio",
          "title": "Wija Studio",
          "icon": "$(symbol-class)"
        }
      ]
    },
    "views": {
      "wija-studio": [
        {
          "id": "wija.agents",
          "name": "My Agents",
          "when": "wija.projectDetected"
        },
        {
          "id": "wija.channels",
          "name": "Channels",
          "when": "wija.projectDetected"
        },
        {
          "id": "wija.marketplace",
          "name": "Agent Marketplace",
          "when": "wija.projectDetected"
        },
        {
          "id": "wija.network",
          "name": "Network Status",
          "when": "wija.projectDetected"
        },
        {
          "id": "wija.wallet",
          "name": "Wallet",
          "when": "wija.projectDetected"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Wija Studio",
      "properties": {
        "wija.network.defaultCluster": {
          "type": "string",
          "enum": ["devnet", "testnet", "mainnet-beta", "localhost"],
          "default": "devnet",
          "description": "Default Solana cluster to connect to"
        },
        "wija.development.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save files when building or deploying"
        },
        "wija.debugging.enableTransactionTracing": {
          "type": "boolean",
          "default": true,
          "description": "Enable detailed transaction tracing and debugging"
        },
        "wija.ui.showAdvancedFeatures": {
          "type": "boolean",
          "default": false,
          "description": "Show advanced development features in the UI"
        },
        "wija.agent.autoDeployOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically deploy agents when Anchor programs are saved"
        },
        "wija.marketplace.enableBrowsing": {
          "type": "boolean",
          "default": true,
          "description": "Enable browsing the agent marketplace within VS Code"
        },
        "wija.wallet.preferredProvider": {
          "type": "string",
          "enum": ["phantom", "solflare", "backpack", "filesystem"],
          "default": "phantom",
          "description": "Preferred wallet provider for transactions"
        },
        "wija.cli.customPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to Wija CLI executable"
        },
        "wija.anchor.customPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to Anchor CLI executable"
        },
        "wija.rpc.customEndpoint": {
          "type": "string",
          "default": "",
          "description": "Custom RPC endpoint URL"
        }
      }
    },
    "debuggers": [
      {
        "type": "wija-anchor",
        "label": "Wija Anchor Debugger",
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the Anchor program"
              },
              "cluster": {
                "type": "string",
                "description": "Solana cluster to debug on"
              },
              "keypair": {
                "type": "string",
                "description": "Path to keypair file"
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "Wija: Debug Anchor Program",
            "description": "Debug Wija Anchor program",
            "body": {
              "type": "wija-anchor",
              "request": "launch",
              "name": "Debug Wija Program",
              "program": "${workspaceFolder}/target/deploy/program.so",
              "cluster": "devnet"
            }
          }
        ]
      }
    ],
    "taskDefinitions": [
      {
        "type": "wija",
        "required": ["command"],
        "properties": {
          "command": {
            "type": "string",
            "description": "The Wija command to execute"
          },
          "args": {
            "type": "array",
            "description": "Arguments to pass to the command"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {
    "@solana/web3.js": "^2.0.0",
    "@coral-xyz/anchor": "^0.31.1",
    "@lightprotocol/zk-compression-sdk": "^0.8.0",
    "vscode-languageclient": "^11.0.0",
    "vscode-languageserver": "^11.0.0",
    "ws": "^8.14.0",
    "node-fetch": "^3.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wija/wija.git"
  },
  "bugs": {
    "url": "https://github.com/wija/wija/issues"
  },
  "homepage": "https://wija.io"
} 