{
  "name": "@ghostspeak/react",
  "version": "1.0.0",
  "description": "React integration for GhostSpeak Protocol",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "ghostspeak",
    "react",
    "solana",
    "blockchain",
    "ai-agents",
    "web3"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ghostspeak/ghostspeak.git",
    "directory": "packages/integrations/react"
  },
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@ghostspeak/sdk": "workspace:*",
    "@solana/addresses": "2.1.1",
    "@solana/codecs": "2.1.1",
    "@solana/rpc": "2.1.1",
    "@solana/rpc-types": "2.1.1",
    "@solana/signers": "2.1.1",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks.esm.js",
      "require": "./dist/hooks.js",
      "types": "./dist/hooks.d.ts"
    },
    "./components": {
      "import": "./dist/components.esm.js", 
      "require": "./dist/components.js",
      "types": "./dist/components.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://ghostspeak.dev",
  "bugs": {
    "url": "https://github.com/ghostspeak/ghostspeak/issues"
  }
}