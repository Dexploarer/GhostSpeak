{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_SOLANA_RPC_URL",
    "NEXT_PUBLIC_SOLANA_NETWORK",
    "NEXT_PUBLIC_GHOSTSPEAK_PROGRAM_ID",
    "NEXT_PUBLIC_CONVEX_URL",
    "CONVEX_DEPLOYMENT",
    "CONVEX_URL",
    "AI_GATEWAY_API_KEY",
    "CROSSMINT_SECRET_KEY",
    "CROSSMINT_API_URL",
    "CROSSMINT_ENV",
    "CROSSMINT_AGENT_TEMPLATE_ID",
    "CROSSMINT_REPUTATION_TEMPLATE_ID",
    "CROSSMINT_JOB_TEMPLATE_ID",
    "NEXT_PUBLIC_CROSSMINT_API_KEY",
    "SOLANA_CLUSTER",
    "SOLANA_RPC_URL",
    "AGENT_WALLET_PRIVATE_KEY",
    "GHOSTSPEAK_NETWORK",
    "GHOSTSPEAK_RPC_URL",
    "GHOSTSPEAK_PROGRAM_ID_MAINNET",
    "GHOSTSPEAK_PROGRAM_ID_DEVNET",
    "GHOSTSPEAK_PROGRAM_ID_TESTNET",
    "GHOSTSPEAK_WALLET_PATH",
    "GHOSTSPEAK_KEYPAIR_PATH",
    "GHOSTSPEAK_USDC_MINT_DEVNET",
    "GHOSTSPEAK_USDC_MINT_MAINNET",
    "GHOSTSPEAK_API_KEY",
    "GHOSTSPEAK_API_SECRET",
    "DEVNET_ADMIN_KEY",
    "DEVNET_UPGRADE_AUTHORITY",
    "DEVNET_FEE_RECEIVER",
    "SKIP_ENV_VALIDATION"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "dev:next": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "dev:convex": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": []
    },
    "type-check": {
      "dependsOn": []
    },
    "clean": {
      "cache": false
    }
  }
}